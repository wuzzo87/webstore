<li>
	<%= gravatar_for user, :size => 30 %>
	<%= link_to user.name, user %>
	
	<% if current_user.admin? %>
	|
    <%= button_to "delete", user, :onclick => "return confirm('Are you sure?')",
    							:method => :delete, 
                                :title => "Delete #{user.name}" %>
	<% end %>
</li>
