<h3>Login details</h3>

<div class="field">
	<%= f.label :name %>
	<br/>
	<%= f.text_field :name %>
</div>
<div class="field">
	<%= f.label :email %>
	<br/>
	<%= f.text_field :email %>
</div>
<div class="field">
	<%= f.label :password %>
	<br/>
	<%= f.password_field :password %>
</div>
<div class="field">
	<%= f.label :password_confirmation, "Confirm Password" %>
	<br/>
	<%= f.password_field :password_confirmation %>
</div>
</br>
<h3>Address</h3>

<%= f.fields_for :addresses do |address|  %>
	<div class="field">
		<%= address.label :street %>
		<br/>
		<%= address.text_field :street %>
	</div>
	
	<div class="field">
		<%= address.label :city %>
		<br/>
		<%= address.text_field :city %>
	</div>
	
	<div class="field">
		<%= address.label :postcode %>
		<br/>
		<%= address.text_field :postcode %>
	</div>
	
	<div class="field">
		<%= address.label :state %>
		<br/>
		<%= address.text_field :state %>
	</div>
	
	<div class="field">
		<%= address.label :country %>
		<br/>
		<%= address.select :country, get_countries, :selected => "Australia" %>
	</div>
<% end %>
